{
  "expo": {
    "name": "Hodophile",
    "slug": "Hodophile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.svg",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "EXPO_PUBLIC_API_URL": "https://6709fc51af1a3998baa2c1b0.mockapi.io/",
      "EXPO_PUBLIC_API_ENDPOINT_TOURS": "tours",
      "EXPO_PUBLIC_API_ENDPOINT_USERS": "users"},
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.hodophile",
      "associatedDomains": ["applinks:myapp"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/bg-heroBanner.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "myapp",
              "host": "*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-linking",
        {
          "schemes": ["myapp"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
